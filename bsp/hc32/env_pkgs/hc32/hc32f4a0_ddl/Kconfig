# Kconfig file for package hc32f4a0_ddl
menuconfig PKG_USING_HC32F4A0_DDL
    bool "Add the HC32F4A0 library files."
    default n

if PKG_USING_HC32F4A0_DDL

    config PKG_HC32F4A0_DDL_PATH
        string
        default "/packages/peripherals/hal-sdk/hc32/hc32f4a0_ddl"

    choice
        prompt "Version"
        help
            Select the package version

        config PKG_USING_HC32F4A0_DDL_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_HC32F4A0_DDL_VER
       string
       default "latest"    if PKG_USING_HC32F4A0_DDL_LATEST_VERSION

endif

