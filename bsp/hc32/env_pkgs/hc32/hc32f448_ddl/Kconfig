# Kconfig file for package hc32f448_ddl
menuconfig PKG_USING_HC32F448_DDL
    bool "Add the HC32F448 library files."
    default n

if PKG_USING_HC32F448_DDL

    config PKG_HC32F448_DDL_PATH
        string
        default "/packages/peripherals/hal-sdk/hc32/hc32f448_ddl"

    choice
        prompt "Version"
        help
            Select the package version

        config PKG_USING_HC32F448_DDL_LATEST_VERSION
            bool "latest"
    endchoice

    config PKG_HC32F448_DDL_VER
       string
       default "latest"    if PKG_USING_HC32F448_DDL_LATEST_VERSION

endif

