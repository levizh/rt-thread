        endif

    menuconfig BSP_USING_EXMC
        bool "Enable EXMC"
        default n
        select BSP_USING_EXMC
        if BSP_USING_EXMC
            choice
                prompt "Using SDRAM or Nand"
                default BSP_USING_SDRAM

                config BSP_USING_SDRAM
                    bool "Using SDRAM"

                config BSP_USING_NAND
                    bool "Using Nand"
                    select RT_USING_MTD_NAND
            endchoice
        endif

    menuconfig BSP_USING_PM
        bool "Enable PM"
        default n
        select RT_USING_PM

    menuconfig BSP_USING_HWCRYPTO
        bool "Using Hardware Crypto drivers"
        default n
        select RT_USING_HWCRYPTO
        if BSP_USING_HWCRYPTO
            config BSP_USING_UQID
            bool "Enable UQID (unique id)"
            default n

            config BSP_USING_RNG
            bool "Using Hardware RNG"
            select RT_HWCRYPTO_USING_RNG
            default n

            config BSP_USING_CRC
            bool "Using Hardware CRC"
            select RT_HWCRYPTO_USING_CRC
            default n
            if BSP_USING_CRC
                config BSP_USING_CRC16_X25
                    bool "Using Hardware CRC16 0x1021 polynomial"
                    select RT_HWCRYPTO_USING_CRC_1021
                    default n

                config BSP_USING_CRC32
                    bool "Using Hardware CRC32 0x04C11DB7 polynomial"
                    select RT_HWCRYPTO_USING_CRC_04C11DB7
                    default y
            endif

            config BSP_USING_AES
            bool "Using Hardware AES"
            select RT_HWCRYPTO_USING_AES
            default n
            if BSP_USING_AES
                config BSP_USING_AES_ECB
                    bool "Using Hardware AES ECB mode"
                    select RT_HWCRYPTO_USING_AES_ECB
                    default y
            endif

            config BSP_USING_HASH
            bool "Using Hardware Hash"
            select RT_HWCRYPTO_USING_SHA2
            default n
            if BSP_USING_HASH
                config BSP_USING_SHA2_256
                    bool "Using Hardware SHA2_256 mode"
                    select RT_HWCRYPTO_USING_SHA2_256
                    default y
                    if BSP_USING_SHA2_256
                        config BSP_HASH_USING_DMA
                            bool "Enable Hash DMA"
                            default y
                    endif
            endif

        endif

    menuconfig BSP_USING_PWM
        bool "Enable output PWM"
        default n
        select RT_USING_PWM
        if BSP_USING_PWM
            menuconfig BSP_USING_PWM_TIMA
                bool "Enable timerA output PWM"
                default n
                if BSP_USING_PWM_TIMA
                    menuconfig BSP_USING_PWM_TIMA_4
                        bool "Enable timerA-4 output PWM"
                        default n
                        if BSP_USING_PWM_TIMA_4
                            config BSP_USING_PWM_TIMA_4_CH1
                                bool "Enable timerA-4 channel1"
                                default n
                            config BSP_USING_PWM_TIMA_4_CH2
                                bool "Enable timerA-4 channel2"
                                default n
                        endif
                    menuconfig BSP_USING_PWM_TIMA_5
                        bool "Enable timerA-5 output PWM"
                        default n
                        if BSP_USING_PWM_TIMA_5
                            config BSP_USING_PWM_TIMA_5_CH1
                                bool "Enable timerA-5 channel1"
                                default n
                            config BSP_USING_PWM_TIMA_5_CH2
                                bool "Enable timerA-5 channel2"
                                default n
                        endif
                endif
            menuconfig BSP_USING_PWM_TIM4
                bool "Enable timer4 output PWM"
                default n
                if BSP_USING_PWM_TIM4
                    menuconfig BSP_USING_PWM_TIM4_1
                        bool "Enable timer4-1 output PWM"
                        default n
                        if BSP_USING_PWM_TIM4_1
                            config BSP_USING_PWM_TIM4_1_OUH
                                bool "Enable TIM4_1_OUH channel0"
                                default n
                            config BSP_USING_PWM_TIM4_1_OUL
                                bool "Enable TIM4_1_OUL channel1"
                                default n
                            config BSP_USING_PWM_TIM4_1_OVH
                                bool "Enable TIM4_1_OVH channel2"
                                default n
                            config BSP_USING_PWM_TIM4_1_OVL
                                bool "Enable TIM4_1_OVL channel3"
                                default n
                            config BSP_USING_PWM_TIM4_1_OWH
                                bool "Enable TIM4_1_OWH channel4"
                                default n
                            config BSP_USING_PWM_TIM4_1_OWL
                                bool "Enable TIM4_1_OWL channel5"
                                default n
                        endif
                endif
            menuconfig BSP_USING_PWM_TIM6
                bool "Enable timer6 output PWM"
                default n
                if BSP_USING_PWM_TIM6
                    menuconfig BSP_USING_PWM_TIM6_1
                        bool "Enable timer6-1 output PWM"
                        default n
                        if BSP_USING_PWM_TIM6_1
                            config BSP_USING_PWM_TIM6_1_A
                                bool "Enable TIM6_1_A channel0"
                                default n
                            config BSP_USING_PWM_TIM6_1_B
                                bool "Enable TIM6_1_B channel1"
                                default n
                        endif
                endif
        endif

    menuconfig BSP_USING_USB
        bool "Enable USB"
        default n
        select RT_USING_USB_DEVICE if BSP_USING_USBD
        select RT_USING_USB_HOST if BSP_USING_USBH
        if BSP_USING_USB
            choice
                prompt "Select USB FS/HS Core"
                default BSP_USING_USBFS

                config BSP_USING_USBFS
                    bool "Use USBFS Core"

                config BSP_USING_USBHS
                    bool "Use USBHS Core"
            endchoice

            choice
                depends on BSP_USING_USBHS
                prompt "Select USB PHY"
                default BSP_USING_USBHS_PHY_EMBED

                config BSP_USING_USBHS_PHY_EMBED
                    bool "Use USBHS Embedded PHY"

                config BSP_USING_USBHS_PHY_EXTERN
                    bool "Use USBHS External PHY"
                    select BSP_USING_I2C1
                    select BSP_USING_TCA9539
            endchoice

            choice
                prompt "Select USB Mode"
                default BSP_USING_USBD

                config BSP_USING_USBD
                    bool "USB Device Mode"

                config BSP_USING_USBH
                    bool "USB Host Mode"
            endchoice

            if BSP_USING_USBD
                config BSP_USING_USBD_VBUS_SENSING
                    bool "Enable VBUS Sensing"
                    default y
            endif

            if BSP_USING_USBH
                menuconfig RT_USBH_MSTORAGE
                    bool "Enable Udisk Drivers"
                    default n
                    if RT_USBH_MSTORAGE
                        config UDISK_MOUNTPOINT
                        string "Udisk mount dir"
                        default "/"
                    endif
            endif
        endif

    menuconfig BSP_USING_QSPI
        bool "Enable QSPI BUS"
        select RT_USING_QSPI
        select RT_USING_SPI
        default n
        if BSP_USING_QSPI
            config BSP_QSPI_USING_DMA
                bool "Enable QSPI DMA support"
                default n
            config BSP_QSPI_USING_SOFT_CS
                bool "Enable QSPI Soft CS Pin"
                default n
        endif

    menuconfig BSP_USING_PULSE_ENCODER
        bool "Enable Pulse Encoder"
        default n
        select RT_USING_PULSE_ENCODER
        if BSP_USING_PULSE_ENCODER
            menuconfig BSP_USING_TIMERA_PULSE_ENCODER
                bool "Use TIMERA As The Pulse Encoder"
                default n
                if BSP_USING_TIMERA_PULSE_ENCODER
                    config BSP_USING_PULSE_ENCODER_TIMA_1
                        bool "Use TIMERA_1 As The Pulse Encoder"
                        default n
                endif
            menuconfig BSP_USING_TIMER6_PULSE_ENCODER
                bool "Use TIMER6 As The Pulse Encoder"
                default n
                if BSP_USING_TIMER6_PULSE_ENCODER
                    config BSP_USING_PULSE_ENCODER_TIM6_1
                        bool "Use TIMER6_1 As The Pulse Encoder"
                        default n
                endif
        endif

    menuconfig BSP_USING_HWTIMER
        bool "Enable Hw Timer"
        default n
        select RT_USING_HWTIMER
        if BSP_USING_HWTIMER
            config BSP_USING_TIM0_1A
                bool "Use Timer0_1 CHA As The Hw Timer"
                default n
            config BSP_USING_TIM0_1B
                bool "Use Timer0_1 CHB As The Hw Timer"
                default n
            config BSP_USING_TIM0_2A
                bool "Use Timer0_2 CHA As The Hw Timer"
                default n
            config BSP_USING_TIM0_2B
                bool "Use Timer0_2 CHB As The Hw Timer"
                default n
        endif

endmenu

